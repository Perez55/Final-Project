@model BookViewModel
<h2>New Book</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="CurrentBook.Title">Title:</label>
        <input type="text" asp-for="CurrentBook.Title" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.Description">Description:</label>
        <input type="text" asp-for="CurrentBook.Description" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.GenreId">Genre:</label>
        <select asp-for="CurrentBook.GenreId" class="form-control"
                asp-items="@(new SelectList(Model.Genres, "GenreId", "Name"))">
            <option value=""></option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.StartDate">Start Date:</label>
        <input type="text" asp-for="CurrentBook.StartDate" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.CompleteDate">Complete Date:</label>
        <input type="text" asp-for="CurrentBook.CompleteDate" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>